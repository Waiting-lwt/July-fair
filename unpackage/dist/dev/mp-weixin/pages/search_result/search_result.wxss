.container {
  margin: 20rpx 48rpx 0 48rpx;
}
.container .paimai-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.container .paimai-list .goodslist {
  position: relative;
}
.container .paimai-list .goodslist .goodsmask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #e5e5e5;
  opacity: 0.5;
  z-index: 99;
}
.container .paimai-list .goodslist .goodsmask .fv {
  position: absolute;
  top: 16rpx;
  right: 24rpx;
  width: 32rpx;
  height: 32rpx;
}
.container .paimai-list .goodslist .goodsmask .fv::before {
  content: '\e6ab';
  font-family: 'iconfont';
}
.container .paimai-list .goodslist .goodsmask .maskcontainer {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 30%;
  width: 100%;
  z-index: 990;
  background-image: linear-gradient(#c7c7c7, #2a2a2a, #000000);
}
.container .paimai-list .goodslist .goodsmask .maskcontainer text {
  position: absolute;
  top: 20rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  font-size: 24rpx;
  color: #ffffff;
  z-index: 999;
}
.container .paimai-list .goodslist .goodsmask .maskcontainer .keyword {
  width: 94%;
  height: 100%;
  padding: 3px 3%;
  display: flex;
  justify-content: center;
}
.container .paimai-list .goodslist .goodsmask .maskcontainer .keyword > view {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  padding: 3rpx 10rpx;
  margin: 54rpx 20rpx 2rpx 0;
  height: 14rpx;
  font-size: 18rpx;
  background-color: #f2f2f2;
  color: #6b6b6b;
}
.container .paimai-list > view {
  width: 300rpx;
  height: 298rpx;
  margin-bottom: 25rpx;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: -2rpx 2rpx 6rpx 2rpx rgba(0, 0, 0, 0.3);
}
.container .paimai-list > view image {
  width: 100%;
  height: 100%;
}
.container .footer {
  margin: 10rpx auto;
  color: #0c8ee5;
  text-align: center;
}
